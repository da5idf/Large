extends layout.pug 
block content 
  header(class='navbar')
    div(class='innerNav')
      div(class='navLeft')
        img(src="/images/logo.png", alt="large-logo", class='navIcon')
        h1(href="/") Large 
      div(class='navRight')
        ul(class='menuNav')
          a(class = 'navItem' href='#') Our Story 
          a(class = 'navItem' href='#') Membership 
          a(class = 'navItem' href='#') Write 
          a(class = 'signIn' href='/login') Sign In
        button(class='getStarted' action='#') Get Started

  include splash-page.pug

  include user-login.pug
  
  h1 Register 
  if errors
    each error in errors 
     ul
      li= error.message
  form(method="post" action="/users")
    input(type="hidden" name="_csrf" value=csrfToken)
    label(for="firstName") First Name 
    input(type="text" name="firstName" value=user.firstName)
    label(for="lastName") Last Name 
    input(type="text" name="lastName" value=user.lastName)
    label(for="userName") Username
    input(type="text" name="userName" value=user.userName)
    label(for="email") Email 
    input(type="email" name="email" value=user.email)
    label(for="password") Password 
    input(type="password" name="password" value=user.password)
    label(for="password") Confirmed Password 
    input(type="password" name="confirmedPassword")
    button Submit
