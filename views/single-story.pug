doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= story.title
        link(rel="icon" type="image/x-icon" href="/images/favicon.ico")
        link(rel='stylesheet' href='/stylesheets/feed.css')
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar-menu.css')
        link(rel='stylesheet' href='/stylesheets/single-story-resource.css')
        link(rel='stylesheet' href='/stylesheets/comment-modal.css')
        script(src="/javascripts/single-resource.js" type="module")
        script(src="/javascripts/storyContentBar.js" type="module")
        script(src="/javascripts/comment.js" type="module")
        script(src="/javascripts/clap.js" type="module")
    body
        #comment-modal-greyOut
            #single-story-layout
                include feed-sidebar.pug
                #single-story-resource
                    #story-header
                        #story-header-left 
                            #story-user-img
                                #story-authorImgContainer
                                    img#story-authorImg(src=`https://picsum.photos/${Math.floor(Math.random() * 50)}`)
                            #story-info 
                                a#story-author(href=`/users/${story.User.id}`)= `${story.User.firstName} ${story.User.lastName}`
                                #story-date-readTime= `${story.date} Â· ${story.readTime} min read`
                        #links-nav 
                            a.button(href="https://twitter.com")
                                img.singleStoryImg#twitterButtonBlack.blacks(src="/images/twitter.png")
                            a.button(href="https://linkedin.com")
                                img.singleStoryImg#linkedInButtonBlack.blacks(src="/images/linkedIn.png")
                            a.button#copyButton
                                img.singleStoryImg#linkButtonBlack.blacks(src="/images/link.png")
                            a.button
                                img.singleStoryImg#saveButton(src="/images/save.png")
                    #story-title= story.title 
                    #story-article= story.article
                include story-content-bar.pug                        
            #clap-comment-modal 
                div(id="clap" data-storyId=`${story.id}`)
                    img.singleStoryImg#clapButton(src="/images/clap.png")
                    #clap-count= allClapsOfStoryCount
                div |
                #comment 
                    img.singleStoryImg#commentButton(src="/images/comment-bubble.png")
                    #comment-count= `${story.Comments.length}`
        include comment-modal.pug
                        